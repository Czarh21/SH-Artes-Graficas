            <!-- Información y precios -->
            <div>
              <div class="bg-sh-blue text-white rounded-lg p-6 mb-6">
                <h4 class="text-xl font-bold mb-4">Información de Precios</h4>
                <div id="modalPrices" class="space-y-3">
                  <!-- Precios se llenarán dinámicamente -->
                </div>
              </div>

