    </div>

    <script>
      // Datos de los laminados
      const laminadosData = {
        arcoiris: {
          title: "Laminado Arcoíris",
          image:
            "https://hebbkx1anhila5yf.public.blob.vercel-storage.com/Arcoiris-wbSsdsANzSRDwIyPe91xIQAzn4laYb.jpeg",
          video:
            "https://hebbkx1anhila5yf.public.blob.vercel-storage.com/Arcoiris-CKKpc3Egl3LvTq1xET2lE3YhSTP2fR.mp4",
          specs: {
            Tamaño: "33cm x 50m",
            Tipo: "Holográfico multicolor",
            Acabado: "Brillante con efecto arcoíris",
            Aplicación:
              "Ideal para tarjetas, invitaciones y material promocional",
          },
          prices: [
            { size: "Por tabloide (33x47.5 cm)", price: "$12 - $18" },
            { size: "Por metro lineal", price: "$8 - $12" },
            { size: "Rollo completo (50m)", price: "$350 - $450" },
          ],
        },
        // Aquí puedes agregar más laminados siguiendo la misma estructura
      };

      // Función para abrir el modal
      function openLaminadoModal(laminadoId) {
        const laminado = laminadosData[laminadoId];
        if (!laminado) return;

        const modal = document.getElementById("laminadoModal");
        const modalTitle = document.getElementById("modalTitle");
        const modalImage = document.getElementById("modalImage");
        const modalVideo = document.getElementById("modalVideo");
        const modalSpecs = document.getElementById("modalSpecs");
        const modalPrices = document.getElementById("modalPrices");

        // Llenar contenido del modal
        modalTitle.textContent = laminado.title;
        modalImage.src = laminado.image;
        modalImage.alt = laminado.title;
        modalVideo.src = laminado.video;

        // Llenar especificaciones
        modalSpecs.innerHTML = `
    <h5 class="font-bold text-gray-800 mb-3">Especificaciones</h5>
    ${Object.entries(laminado.specs)
      .map(
        ([key, value]) => `
      <div class="flex justify-between py-2 border-b border-gray-200 last:border-b-0">
        <span class="font-medium text-gray-700">${key}:</span>
        <span class="text-gray-600">${value}</span>
      </div>
    `
      )
      .join("")}
  `;

        // Llenar precios
        modalPrices.innerHTML = laminado.prices
          .map(
            (price) => `
    <div class="flex justify-between items-center">
      <span>${price.size}</span>
      <span class="font-bold text-lg">${price.price}</span>
    </div>
  `
          )
          .join("");

        // Mostrar modal
        modal.classList.remove("hidden");
        document.body.style.overflow = "hidden";
      }

      // Función para cerrar el modal
      function closeLaminadoModal() {
        const modal = document.getElementById("laminadoModal");
        const modalVideo = document.getElementById("modalVideo");

        modal.classList.add("hidden");
        modalVideo.pause();
        document.body.style.overflow = "auto";
      }

      // Función para cotizar laminado
      function cotizarLaminado() {
        closeLaminadoModal();
        scrollToSection("contacto");

        // Pre-llenar el formulario si existe
        const serviceSelect = document.getElementById("service");
        if (serviceSelect) {
          serviceSelect.value = "laminado";
        }

        const messageTextarea = document.getElementById("message");
        if (messageTextarea) {
          messageTextarea.value =
            "Estoy interesado en cotizar el laminado que vi en el catálogo. ";
        }
      }

      // Cerrar modal al hacer clic fuera de él
      document
        .getElementById("laminadoModal")
        .addEventListener("click", function (e) {
          if (e.target === this) {
            closeLaminadoModal();
          }
        });

      // Cerrar modal con tecla Escape
      document.addEventListener("keydown", function (e) {
        if (e.key === "Escape") {
          closeLaminadoModal();
        }
      });
    </script>

    <style>
      /* Estilos adicionales para el modal */
      #laminadoModal {
        backdrop-filter: blur(4px);
      }

      #laminadoModal .bg-white {
        box-shadow: 0 25px 50px -12px rgba(0, 0, 0, 0.25);
      }

      /* Animación para las tarjetas de laminados */
      .card-hover:hover {
        transform: translateY(-4px);
        box-shadow: 0 20px 25px -5px rgba(0, 0, 0, 0.1),
          0 10px 10px -5px rgba(0, 0, 0, 0.04);
      }

      /* Efecto de hover para las imágenes */
      .card-hover img {
        transition: transform 0.3s ease;
      }

      .card-hover:hover img {
        transform: scale(1.05);
      }
    </style>

